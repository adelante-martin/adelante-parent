<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>au.com.adelante</groupId>
	<artifactId>adelante-parent</artifactId>
	<version>0.1.6-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>adelante-parent</name>
	<description>Contains the top parent POM for all Adelante projects with common dependencies, versions, plugins, reports etc</description>
	<url>https://nexus.adelante.com.au/trac/wiki/AdelanteParent</url>
	<scm>
		<url>https://nexus.adelante.com.au/svn/adelante-parent/trunk</url>
		<connection>scm:svn:https://nexus.adelante.com.au/svn/adelante-parent/trunk</connection>
		<developerConnection>scm:svn:https://nexus.adelante.com.au/svn/adelante-parent/trunk</developerConnection>
	</scm>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.scm.id>nexus.adelante.com.au</project.scm.id>
		<java.version>1.8</java.version>
	</properties>

	<!-- Adelante Nexus
	 -->
	<distributionManagement>
		<repository>
			<id>nexus-releases</id>
			<name>Adelante Releases</name>
			<url>https://nexus.adelante.com.au/nexus/content/repositories/releases</url>
		</repository>
		<snapshotRepository>
			<id>nexus-snapshots</id>
			<name>Adelante Snapshots</name>
			<url>https://nexus.adelante.com.au/nexus/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>

	<repositories>
		<repository>
			<id>nexus-public</id>
			<name>Adelante Nexus Repository</name>
			<url>https://nexus.adelante.com.au/nexus/content/groups/public</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>nexus-public</id>
			<name>Adelante Nexus Repository</name>
			<url>https://nexus.adelante.com.au/nexus/content/groups/public</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

<!-- Central - for when Adelante Nexus is unreachable
    <repositories>
        <repository>
            <id>central</id>
            <name>Maven Central Repository</name>
            <url>http://repo1.maven.org/maven2</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
    
